{
  "name": "pyhtml",
  "displayName": "PyHTML",
  "description": "Language support for PyHTML files",
  "version": "0.0.1",
  "publisher": "Reece Holmdahl",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pyhtml",
        "aliases": [
          "PyHTML",
          "pyhtml"
        ],
        "extensions": [
          ".pyhtml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pyhtml",
        "scopeName": "source.pyhtml",
        "path": "./syntaxes/pyhtml.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.python": "python",
          "meta.embedded.inline.python": "python",
          "text.html.basic": "html"
        }
      }
    ],
    "configuration": {
      "title": "PyHTML",
      "properties": {
        "pyhtml.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter"
        },
        "pyhtml.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    },
    "commands": [
      {
        "command": "pyhtml.toggleComment",
        "title": "PyHTML: Toggle Comment"
      }
    ],
    "keybindings": [
      {
        "command": "pyhtml.toggleComment",
        "key": "cmd+/",
        "mac": "cmd+/",
        "win": "ctrl+/",
        "linux": "ctrl+/",
        "when": "editorTextFocus && editorLangId == pyhtml"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node build.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node build.js --watch",
    "watch:tsc": "tsc --noEmit --watch -p ./",
    "package": "npm run check-types && node build.js --production",
    "check-types": "tsc --noEmit -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "web-tree-sitter": "^0.26.3"
  }
}
