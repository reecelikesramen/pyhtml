!component '../components/Badge.pywire' as Badge
!component '../components/Card.pywire' as Card
!component '../components/Button.pywire' as Button
!component '../components/Alert.pywire' as Alert
!component '../components/test_inject.pywire' as TestInject

!provide { 'COUNT': count }

<div>
    <h1>Component Test</h1>
    
    <Badge label="New" type="primary" />
    <Badge label="Old" type="secondary">
        (Refurbished)
    </Badge>

    <Button @click={count += 1}>Count: {count}</Button>
    <hr />
    <TestInject></TestInject>
    
    <hr />

    <Alert title="Information">This is an informational alert.</Alert>

    <hr />
    
    <Card>
        <slot name="header">Card Header</slot>
        Card Body Content
    </Card>
</div>

---
count = 0