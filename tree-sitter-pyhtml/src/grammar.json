{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "pyhtml",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "directive"
          },
          {
            "type": "SYMBOL",
            "name": "_html_content"
          },
          {
            "type": "SYMBOL",
            "name": "python_section"
          }
        ]
      }
    },
    "directive": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_directive_single_line"
        },
        {
          "type": "SYMBOL",
          "name": "_directive_multiline"
        }
      ]
    },
    "_directive_single_line": {
      "type": "SEQ",
      "members": [
        {
          "type": "ALIAS",
          "content": {
            "type": "TOKEN",
            "content": {
              "type": "SEQ",
              "members": [
                {
                  "type": "STRING",
                  "value": "!"
                },
                {
                  "type": "PATTERN",
                  "value": "[a-zA-Z_]\\w*"
                }
              ]
            }
          },
          "named": true,
          "value": "keyword_directive"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "_directive_content"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "PATTERN",
          "value": "\\r?\\n"
        }
      ]
    },
    "_directive_content": {
      "type": "TOKEN",
      "content": {
        "type": "PREC",
        "value": -1,
        "content": {
          "type": "PATTERN",
          "value": ".+"
        }
      }
    },
    "_directive_multiline": {
      "type": "SEQ",
      "members": [
        {
          "type": "ALIAS",
          "content": {
            "type": "STRING",
            "value": "!path"
          },
          "named": true,
          "value": "keyword_directive"
        },
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "ALIAS",
            "content": {
              "type": "SYMBOL",
              "name": "_directive_multiline_content"
            },
            "named": true,
            "value": "python_code"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "_directive_multiline_content": {
      "type": "PATTERN",
      "value": "[^}]+"
    },
    "python_section": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "separator"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "ALIAS",
              "content": {
                "type": "SYMBOL",
                "name": "_python_block"
              },
              "named": true,
              "value": "python_code"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "_python_block": {
      "type": "TOKEN",
      "content": {
        "type": "PREC",
        "value": 1,
        "content": {
          "type": "REPEAT1",
          "content": {
            "type": "PATTERN",
            "value": ".|\\n"
          }
        }
      }
    },
    "_html_content": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "tag"
        },
        {
          "type": "SYMBOL",
          "name": "text"
        },
        {
          "type": "SYMBOL",
          "name": "hyphen"
        },
        {
          "type": "SYMBOL",
          "name": "interpolation"
        }
      ]
    },
    "tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "<"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "tag_name"
          },
          "named": true,
          "value": "tag_name"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "attribute"
          }
        },
        {
          "type": "STRING",
          "value": ">"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "_html_content"
          }
        },
        {
          "type": "STRING",
          "value": "</"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "tag_name"
          },
          "named": true,
          "value": "tag_name"
        },
        {
          "type": "STRING",
          "value": ">"
        }
      ]
    },
    "tag_name": {
      "type": "PATTERN",
      "value": "\\w+"
    },
    "attribute": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_attribute_name"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SEQ",
              "members": [
                {
                  "type": "STRING",
                  "value": "="
                },
                {
                  "type": "SYMBOL",
                  "name": "attribute_value"
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "_attribute_name": {
      "type": "CHOICE",
      "members": [
        {
          "type": "ALIAS",
          "content": {
            "type": "PATTERN",
            "value": "\\w+"
          },
          "named": true,
          "value": "attribute_name"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "PATTERN",
                "value": "@\\w+"
              },
              {
                "type": "PATTERN",
                "value": "\\$[a-zA-Z_]\\w*"
              },
              {
                "type": "PATTERN",
                "value": ":\\w+"
              }
            ]
          },
          "named": true,
          "value": "special_attribute_name"
        }
      ]
    },
    "attribute_value": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_triple_quoted_value"
        },
        {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "\""
            },
            {
              "type": "ALIAS",
              "content": {
                "type": "PATTERN",
                "value": "[^\"]*"
              },
              "named": true,
              "value": "attribute_content"
            },
            {
              "type": "STRING",
              "value": "\""
            }
          ]
        },
        {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "'"
            },
            {
              "type": "ALIAS",
              "content": {
                "type": "PATTERN",
                "value": "[^']*"
              },
              "named": true,
              "value": "attribute_content"
            },
            {
              "type": "STRING",
              "value": "'"
            }
          ]
        }
      ]
    },
    "_triple_quoted_value": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "\"\"\""
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "ALIAS",
              "content": {
                "type": "SYMBOL",
                "name": "_triple_quoted_content"
              },
              "named": true,
              "value": "python_code"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "\"\"\""
        }
      ]
    },
    "_triple_quoted_content": {
      "type": "PATTERN",
      "value": "([^\"]|\"[^\"]|\"\"[^\"])+"
    },
    "interpolation": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "_interpolation_content"
          },
          "named": true,
          "value": "python_code"
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "_interpolation_content": {
      "type": "PATTERN",
      "value": "[^}]+"
    },
    "separator": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "---"
          }
        ]
      }
    },
    "text": {
      "type": "PATTERN",
      "value": "[^<{}\\-]+"
    },
    "hyphen": {
      "type": "STRING",
      "value": "-"
    },
    "comment": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "<!--"
          },
          {
            "type": "PATTERN",
            "value": "[^-]+"
          },
          {
            "type": "STRING",
            "value": "-->"
          }
        ]
      }
    }
  },
  "extras": [
    {
      "type": "SYMBOL",
      "name": "comment"
    },
    {
      "type": "PATTERN",
      "value": "\\s+"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}